{
  "short_name": "Reco Extension",
  "name": "Reco Extension",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Reco Extension",
  "background": {
    "scripts": ["app/background.js"]
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Reco Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts" : [
    {
      "matches": ["http://www.engineering.org.cn/*/*/*", "https://www.engineering.org.cn/*/*/*","https://www.engineering.org.cn/*/*/*/*"],
      "css": ["/css/root.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "web_accessible_resources":[
    "/static/css/content.css", "/static/media/*"
  ],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'"
}
